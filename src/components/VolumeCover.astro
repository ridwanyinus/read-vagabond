---
import { buildVolumeCoverUrl } from "../lib/page";

interface Props {
  volume: number;
}

const { volume } = Astro.props;
---

<div class="mb-6">
  <div class="aspect-2/3 relative overflow-hidden rounded-xl shadow-2xl">
    <img
      src={buildVolumeCoverUrl(volume)}
      alt={`Volume ${volume} Cover`}
      class="w-full h-full object-cover"
    />
  </div>
</div>
