---
interface Props {
  volume: number;
  chapterCount: number;
  firstChapter: number;
  lastChapter: number;
  releaseDate: number;
}

const { volume, chapterCount, firstChapter, lastChapter, releaseDate } =
  Astro.props;
---

<span
  class="inline-block w-fit px-3 py-1 bg-gray-100 text-gray-700 text-sm font-medium rounded-full mb-4"
>
  Volume {volume}
</span>

<ul class="space-y-3 text-sm text-gray-600">
  <li class="flex items-start gap-3">
    <svg
      class="w-5 h-5 text-gray-400 shrink-0 mt-0.5"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
      ></path>
    </svg>
    <span>{chapterCount} chapters</span>
  </li>
  <li class="flex items-start gap-3">
    <svg
      class="w-5 h-5 text-gray-400 shrink-0 mt-0.5"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
    </svg>
    <span>Chapters {firstChapter}-{lastChapter}</span>
  </li>
  {
    releaseDate && (
      <li class="flex items-start gap-3">
        <svg
          class="w-5 h-5 text-gray-400 shrink-0 mt-0.5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
          />
        </svg>
        <span>
          {new Date(releaseDate * 1000).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
            timeZone: "UTC",
          })}
        </span>
      </li>
    )
  }
</ul>
