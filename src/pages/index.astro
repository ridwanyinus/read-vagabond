---
import "../styles/global.css";

async function fetchJson<T>(endpoint: string): Promise<T> {
  const response = await fetch(`${Astro.url.origin}${endpoint}`);
  return response.json();
}
const title = "Vagabond Reader";

const metadata = await fetchJson<{
  tankobon: number;
  chapters: number;
}>("/api/metadata");

const chapters = await fetchJson<
  Array<{
    number: number;
    title: string;
    description: string;
  }>
>("/api/chapters");
---

<!doctype html>
<html lang="en" class="font-sans">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Read Vagabond Like Never Before</title>
    <link rel="icon" href="favicon.svg" type="image/svg+xml" />
    <meta
      name="description"
      content="A minimalist, high-quality manga reader landing page built with Astro."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.js"
    ></script>
  </head>
  <body class="m-0 p-0 bg-white text-gray-900">
    <nav class="bg-white border-b border-gray-200">
      <div
        class="max-w-7xl flex flex-wrap items-center justify-between mx-auto p-4"
      >
        <span
          class="self-center text-xl md:text-2xl font-semibold whitespace-nowrap"
          >{title}</span
        >
        <a
          href="#get-started"
          class="text-white bg-gray-900 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none"
        >
          Get Started
        </a>
      </div>
    </nav>

    <main class="max-w-275 mx-auto px-4 md:px-6">
      <section
        class="pt-12 pb-8 md:pt-24 md:pb-16 grid grid-cols-1 lg:grid-cols-[1.1fr_0.9fr] gap-6 md:gap-10"
      >
        <div>
          <h1
            class="text-[clamp(1.5rem,8vw,2.625rem)] md:text-[clamp(2.25rem,6vw,4rem)] leading-[1.05] m-0 mb-4 font-bold"
          >
            Read Takehiko Inoue's masterpiece Vagabond like never before
          </h1>
          <p class="text-gray-500 text-base md:text-lg max-w-[52ch]">
            High-quality pages. Free and ad-free. Forever.
          </p>
          <div
            class="flex flex-col md:flex-row gap-3 mt-7 flex-wrap w-full md:w-auto"
          >
            <a
              href="#chapters"
              class="text-white bg-gray-900 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-base px-6 py-3 text-center w-full md:w-auto focus:outline-none"
            >
              Start Reading →
            </a>
            <a
              href="#donate"
              class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-base px-6 py-3 text-center w-full md:w-auto focus:outline-none"
            >
              Donate
            </a>
          </div>
        </div>
        <img
          src="/Musashi_Eating.jpg"
          alt="Musashi Eating"
          width="500"
          class="w-full md:max-w-100 lg:max-w-full mx-auto"
        />
      </section>

      <section id="chapters" class="py-10 md:py-16">
        <h2 class="text-center mb-4 text-3xl font-bold text-gray-900">
          Chapters
        </h2>
        <div class="flex justify-center gap-2 mb-8">
          <span
            class="bg-gray-100 text-gray-800 text-sm font-medium px-3 py-1 rounded"
            >{metadata.tankobon} volumes</span
          >
          <span
            class="bg-gray-100 text-gray-800 text-sm font-medium px-3 py-1 rounded"
            >{metadata.chapters} chapters</span
          >
        </div>
        <div class="w-full">
          {
            chapters.map((chapter) => (
              <div class="flex flex-col md:flex-row items-start md:items-center justify-between p-4 mb-3 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors duration-200">
                <div class="flex-1 mb-3 md:mb-0">
                  <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded mb-2 inline-block uppercase">
                    Ch. {chapter.number}
                  </span>
                  <h5 class="text-lg font-bold tracking-tight text-gray-900 mb-1">
                    {chapter.title}
                  </h5>
                  <p class="text-sm text-gray-700">{chapter.description}</p>
                </div>
                <a
                  href={`/chapter/${chapter.number}`}
                  class="text-white bg-gray-900 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full md:w-auto focus:outline-none"
                >
                  Read Now
                </a>
              </div>
            ))
          }
        </div>
      </section>

      <section id="donate" class="py-10 md:py-16">
        <div
          class="block p-6 bg-white border border-gray-200 rounded-lg shadow"
        >
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
            Support This Project
          </h5>
          <p class="mb-4 text-gray-700">
            If you enjoy this reader and want to support its development,
            consider buying me a coffee! Your donations help keep this project
            high-quality, free and ad-free for everyone.
          </p>
          <div class="flex flex-col md:flex-row gap-3">
            <a
              href="https://www.paypal.com/paypalme/mdnssknght"
              target="_blank"
              class="inline-flex items-center justify-center gap-2 text-white bg-gray-900 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full md:w-auto focus:outline-none"
            >
              Donate via PayPal
              <i class="fab fa-paypal"></i>
            </a>
            <a
              href="https://buymeacoffee.com/crydafan"
              target="_blank"
              class="inline-flex items-center justify-center gap-2 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full md:w-auto focus:outline-none"
            >
              Buy Me a Coffee
              <i class="fa fa-coffee"></i>
            </a>
          </div>
        </div>
      </section>
    </main>

    <footer class="bg-white border-t border-gray-200">
      <div class="max-w-7xl mx-auto p-4 md:p-6">
        <span class="block text-sm text-gray-500 text-center">
          Made with ❤️ by Leonardo. For Vagabond fans, by a Vagabond fan.
        </span>
      </div>
    </footer>

    <script>
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          const href = anchor.getAttribute("href");
          if (href && href !== "#") {
            e.preventDefault();
            const target = document.querySelector(href);
            if (target) {
              target.scrollIntoView({
                behavior: "smooth",
                block: "start",
              });
            }
          }
        });
      });
    </script>
  </body>
</html>
