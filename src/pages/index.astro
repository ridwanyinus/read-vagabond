---
import "../styles/global.css";

async function fetchJson<T>(endpoint: string): Promise<T> {
  const response = await fetch(`${Astro.url.origin}${endpoint}`);
  return response.json();
}
const title = "Vagabond Reader";

const metadata = await fetchJson<{
  tankobon: number;
  chapters: number;
}>("/api/metadata");

const chapters = await fetchJson<
  Array<{
    number: number;
    title: string;
    description: string;
  }>
>("/api/chapters");
---

<!doctype html>
<html lang="en" class="font-sans">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Read Vagabond Like Never Before</title>
    <link rel="icon" href="favicon.svg" type="image/svg+xml" />
    <meta
      name="description"
      content="A minimalist, high-quality manga reader landing page built with Astro."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body class="m-0 p-0 bg-white text-gray-900">
    <header
      class="max-w-275 mx-auto px-6 py-6 flex items-center justify-between gap-4 flex-wrap md:flex-nowrap"
    >
      <div class="font-bold tracking-wide text-base md:text-lg">{title}</div>
      <a
        class="px-3.5 py-2.5 md:px-4 md:py-3 rounded-xl bg-gray-900 text-white font-semibold text-sm md:text-base"
        href="#get-started">Get Started</a
      >
    </header>

    <main class="max-w-275 mx-auto px-4 md:px-6">
      <section
        class="pt-12 pb-8 md:pt-24 md:pb-16 grid grid-cols-1 lg:grid-cols-[1.1fr_0.9fr] gap-6 md:gap-10"
      >
        <div>
          <h1
            class="text-[clamp(1.5rem,8vw,2.625rem)] md:text-[clamp(2.25rem,6vw,4rem)] leading-[1.05] m-0 mb-4"
          >
            Read Takehiko Inoue's masterpiece Vagabond like never before
          </h1>
          <p class="text-gray-500 text-base md:text-lg max-w-[52ch]">
            High-quality pages. Free and ad-free. Forever.
          </p>
          <div
            class="flex flex-col md:flex-row gap-3 mt-7 flex-wrap w-full md:w-auto"
          >
            <a
              class="px-4 py-3 rounded-xl bg-gray-900 text-white border-transparent font-semibold text-center w-full md:w-auto"
              href="#chapters">Start Reading →</a
            >
            <a
              class="px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 text-center w-full md:w-auto"
              href="#donate">Donate</a
            >
          </div>
        </div>
        <img
          src="/Musashi_Eating.jpg"
          alt="Musashi Eating"
          width="500"
          class="w-full md:max-w-100 lg:max-w-full mx-auto"
        />
      </section>

      <section id="chapters" class="py-10 md:py-16">
        <h2 class="text-center mb-3 text-2xl font-semibold">Chapters</h2>
        <p class="text-center text-gray-500 mb-8 text-sm">
          {metadata.tankobon} volumes • {metadata.chapters} chapters
        </p>
        <ol class="list-none p-0 m-0">
          {
            chapters.map((chapter) => (
              <li>
                <div class="flex flex-col md:flex-row items-start md:items-center justify-between p-3 md:p-4 md:px-5 border-b border-gray-200 bg-gray-50 mb-2 rounded-lg transition-all duration-200 hover:bg-gray-100 hover:translate-x-1 md:hover:translate-x-1 no-underline gap-3 md:gap-0">
                  <div class="flex-1">
                    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1">
                      Ch. {chapter.number}
                    </div>
                    <div class="font-semibold text-gray-900 text-sm md:text-base">
                      {chapter.title}
                    </div>
                    <div class="text-xs md:text-[13px] text-gray-500 mt-1">
                      {chapter.description}
                    </div>
                  </div>
                  <a
                    class="px-3.5 py-2 md:px-4 md:py-2 bg-gray-900 text-white rounded-md no-underline font-semibold text-xs md:text-[13px] whitespace-nowrap md:ml-4 transition-opacity hover:opacity-90 text-center w-full md:w-auto"
                    href={`/chapter/${chapter.number}`}
                  >
                    Read
                  </a>
                </div>
              </li>
            ))
          }
        </ol>
      </section>

      <section id="donate" class="py-10 md:py-16">
        <div class="bg-gray-50 border border-gray-200 rounded-2xl p-4 md:p-5">
          <h3 class="mt-0 text-lg md:text-xl font-semibold">
            Support This Project
          </h3>
          <p>
            If you enjoy this reader and want to support its development,
            consider buying me a coffee! Your donations help keep this project
            high-quality, free and ad-free for everyone.
          </p>
          <div class="mt-5 flex flex-col md:flex-row gap-3">
            <a
              class="inline-block px-4 py-3 rounded-xl bg-gray-900 text-white border-transparent font-semibold text-center w-full md:w-auto"
              href="https://www.paypal.com/paypalme/mdnssknght"
              target="_blank"
              >Donate via Paypal{" "}<i class="fab fa-paypal"></i>
            </a>
            <a
              class="inline-block px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 text-center w-full md:w-auto"
              href="https://buymeacoffee.com/crydafan"
              target="_blank"
              >Buy Me a Coffee{" "}<i class="fa fa-coffee"></i>
            </a>
          </div>
        </div>
      </section>
    </main>

    <footer class="border-t border-gray-200 py-8 text-gray-500">
      <div class="max-w-275 mx-auto px-4 md:px-6">
        Made with ❤️ by Leonardo. For Vagabond fans, by a Vagabond fan.
      </div>
    </footer>

    <script>
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          const href = anchor.getAttribute("href");
          if (href && href !== "#") {
            e.preventDefault();
            const target = document.querySelector(href);
            if (target) {
              target.scrollIntoView({
                behavior: "smooth",
                block: "start",
              });
            }
          }
        });
      });
    </script>
  </body>
</html>
