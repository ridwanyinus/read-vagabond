---
import "../styles/global.css";

async function fetchJson<T>(endpoint: string): Promise<T> {
  const response = await fetch(`${Astro.url.origin}${endpoint}`);
  return response.json();
}

const metadata = await fetchJson<{
  tankobon: number;
  chapters: number;
}>("/api/metadata");

const volumes = await fetchJson<
  Array<{
    volume: number;
    release_date: string;
    chapter_count: number;
    first_chapter: number;
    last_chapter: number;
  }>
>("/api/volumes");
---

<!doctype html>
<html lang="en" class="font-sans">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Read Vagabond Manga - Takehiko Inoue's Masterpiece</title>
    <link rel="icon" href="favicon.svg" type="image/svg+xml" />
    <meta
      name="description"
      content="A minimalist, high-quality manga reader landing page built with Astro."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@4.0.1/dist/flowbite.min.js"
    ></script>
  </head>
  <body class="m-0 p-0 bg-white text-gray-900">
    <nav
      class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-200/50"
    >
      <div
        class="max-w-7xl flex flex-wrap items-center justify-center md:justify-between mx-auto p-4"
      >
        <a href="/">
          <img src="/Vagabond_Logo.png" alt="Vagabond" class="h-15" />
        </a>
      </div>
    </nav>

    <main class="max-w-275 mx-auto px-4 md:px-6 pt-20">
      <section
        class="pt-12 pb-8 md:pt-24 md:pb-16 grid grid-cols-1 lg:grid-cols-[1.1fr_0.9fr] gap-6 md:gap-10"
      >
        <div>
          <h1
            class="text-[clamp(1.5rem,8vw,2.625rem)] md:text-[clamp(2.25rem,6vw,4rem)] leading-[1.05] m-0 mb-4 font-bold"
          >
            Read Takehiko Inoue's masterpiece like never before
          </h1>
          <p class="text-gray-500 text-base md:text-lg max-w-[52ch]">
            High-quality scans. Free and ad-free. Forever.
          </p>
          <div
            class="flex flex-col md:flex-row gap-3 mt-7 flex-wrap w-full md:w-auto"
          >
            <a
              href="#volumes"
              class="text-white bg-gray-900 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-base px-6 py-3 text-center w-full md:w-auto focus:outline-none"
            >
              ↓ Start Reading
            </a>
            <a
              href="#donate"
              class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-base px-6 py-3 text-center w-full md:w-auto focus:outline-none"
            >
              Donate
            </a>
          </div>
        </div>
        <img
          src="/Musashi_Eating.jpg"
          alt="Musashi Eating"
          width="500"
          class="w-full md:max-w-100 lg:max-w-full mx-auto"
        />
      </section>

      <section id="volumes" class="py-10 md:py-16 scroll-mt-20">
        <h2 class="text-center mb-4 text-3xl font-bold text-gray-900">
          Volumes
        </h2>
        <div class="flex justify-center gap-2 mb-8">
          <span
            class="bg-gray-100 text-gray-800 text-sm font-medium px-3 py-1 rounded"
            >{metadata.tankobon} volumes</span
          >
          <span
            class="bg-gray-100 text-gray-800 text-sm font-medium px-3 py-1 rounded"
            >{metadata.chapters} chapters</span
          >
        </div>
        <div
          class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 max-w-7xl mx-auto"
        >
          {
            volumes.map((volume) => (
              <a href={`/volume-${volume.volume}`} class="group block">
                <div class="relative overflow-hidden rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300">
                  <div class="aspect-2/3 relative overflow-hidden bg-gray-100">
                    <img
                      src={`https://manga.readbagabondo.com/volume-${String(volume.volume).padStart(2, "0")}/cover.jpg`}
                      alt={`Volume ${volume.volume} Cover`}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                      loading="lazy"
                    />
                    <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                    <div class="absolute bottom-0 left-0 right-0 p-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                      <div class="text-white space-y-1">
                        <p class="text-sm font-medium flex items-center gap-1.5">
                          <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
                          </svg>
                          {volume.chapter_count} chapters
                        </p>
                        <p class="text-sm flex items-center gap-1.5">
                          <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                              clip-rule="evenodd"
                            />
                          </svg>
                          {new Date(volume.release_date).toLocaleDateString(
                            "en-US",
                            {
                              year: "numeric",
                              month: "short",
                            },
                          )}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="mt-3 text-center">
                  <h3 class="text-lg font-bold text-gray-900 group-hover:text-gray-600 transition-colors">
                    Volume {volume.volume}
                  </h3>
                  <p class="text-sm text-gray-500 mt-1">
                    Chapters {volume.first_chapter}-{volume.last_chapter}
                  </p>
                </div>
              </a>
            ))
          }
        </div>
      </section>

      <section id="donate" class="py-10 md:py-16">
        <div
          class="block p-6 bg-white border border-gray-200 rounded-lg shadow"
        >
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
            Support This Project
          </h5>
          <p class="mb-4 text-gray-700">
            If you enjoy this reader and want to support its development,
            consider buying me a coffee! Your donations help keep this project
            high-quality, free and ad-free for everyone.
          </p>
          <div class="flex flex-col md:flex-row gap-3">
            <a
              href="https://www.paypal.com/paypalme/mdnssknght"
              target="_blank"
              class="inline-flex items-center justify-center gap-2 text-white bg-gray-900 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full md:w-auto focus:outline-none"
            >
              Donate via PayPal
              <i class="fab fa-paypal"></i>
            </a>
            <a
              href="https://buymeacoffee.com/crydafan"
              target="_blank"
              class="inline-flex items-center justify-center gap-2 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full md:w-auto focus:outline-none"
            >
              Buy Me a Coffee
              <i class="fa fa-coffee"></i>
            </a>
          </div>
        </div>
      </section>
    </main>

    <footer class="bg-white border-t border-gray-200">
      <div class="max-w-7xl mx-auto p-4 md:p-6">
        <span class="block text-sm text-gray-500 text-center">
          Made with ❤️ by Leonardo. For Vagabond fans, by a Vagabond fan.
        </span>
      </div>
    </footer>

    <script>
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener("click", function (e) {
          const href = anchor.getAttribute("href");
          if (href && href !== "#") {
            e.preventDefault();
            const target = document.querySelector(href);
            if (target) {
              target.scrollIntoView({
                behavior: "smooth",
                block: "start",
              });
            }
          }
        });
      });
    </script>
  </body>
</html>
