---
import VolumeCard from "../components/VolumeCard.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { getMetadata, getVolumes } from "../lib/db";

const db = Astro.locals.runtime?.env?.vagabond_db;
if (!db) {
  throw new Error("Database not configured");
}

const metadata = await getMetadata(db);
const volumes = await getVolumes(db);
---

<MainLayout
  tagline="High-quality Scans of All Chapters"
  metadata={{
    title: "Read Vagabond Manga | High-quality Scans of All Chapters",
    description: `Free, high-quality Vagabond manga reader. All ${metadata.chapters} chapters of Takehiko Inoue's masterpiece. No ads, no signup.`,
    keywords: [
      "Vagabond manga",
      "read Vagabond online",
      "Takehiko Inoue",
      "Miyamoto Musashi",
      "manga reader",
      "free manga",
      "samurai manga",
    ],
  }}
>
  <main class="max-w-275 mx-auto px-4 md:px-6 pt-20">
    <section
      class="pt-12 pb-8 md:pt-24 md:pb-16 grid grid-cols-1 lg:grid-cols-[1.1fr_0.9fr] gap-6 md:gap-10 items-center"
    >
      <div>
        <h1 class="text-6xl md:text-6xl leading-[1.05] m-0 mb-4 font-bold">
          Read Takehiko Inoue's masterpiece like never before
        </h1>
        <p class="text-gray-500 text-2xl md:text-lg max-w-[52ch]">
          High-quality scans. Free and ad-free. Forever.
        </p>
        <div class="flex items-center gap-3 mt-3">
          <img
            src="https://keiyoushi.github.io/favicon.ico"
            alt="Keiyoushi Logo"
            width="35"
          />
          <a
            class="text-xl tracking-tight font-semibold animate-gradient"
            target="_blank"
            rel="noopener noreferrer"
            href="https://keiyoushi.github.io/extensions/#en.readvagabondmanga"
          >
            Now available via Keiyoushi extensions!
          </a>
        </div>
        <div
          class="flex flex-col md:flex-row gap-3 mt-7 flex-wrap w-full md:w-auto"
        >
          <a
            href="#volumes"
            class="text-white bg-gray-900 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-base px-6 py-3 text-center w-full md:w-auto focus:outline-none"
          >
            â†“ Start Reading
          </a>
          <a
            href="#donate"
            class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-base px-6 py-3 text-center w-full md:w-auto focus:outline-none"
          >
            Donate
          </a>
        </div>
      </div>
      <img
        src="/Musashi_Eating.jpg"
        alt="Musashi Eating"
        class="w-full md:max-w-100 lg:max-w-full mx-auto"
      />
    </section>

    <section id="volumes" class="py-10 md:py-16 scroll-mt-20">
      <h2 class="text-center mb-4 text-3xl font-bold text-gray-900">Volumes</h2>
      <div class="flex justify-center gap-2 mb-8">
        <span
          class="bg-gray-100 text-gray-800 text-sm font-medium px-3 py-1 rounded"
          >{metadata.tankobon} volumes</span
        >
        <span
          class="bg-gray-100 text-gray-800 text-sm font-medium px-3 py-1 rounded"
          >{metadata.chapters} chapters</span
        >
      </div>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8 max-w-7xl mx-auto"
      >
        {
          volumes.map((volume) => (
            <VolumeCard
              volume={volume.volume}
              chapterCount={volume.chapter_count}
              releaseDate={volume.release_date}
              firstChapter={volume.first_chapter}
              lastChapter={volume.last_chapter}
            />
          ))
        }
      </div>
    </section>

    <section id="donate" class="py-10 md:py-16">
      <div class="block p-6 bg-white border border-gray-200 rounded-lg shadow">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
          Support This Project
        </h5>
        <p class="mb-4 text-gray-700">
          If you enjoy this reader and want to support its development, consider
          buying me a coffee! Your donations help keep this project
          high-quality, free and ad-free for everyone.
        </p>
        <div class="flex flex-col md:flex-row gap-3">
          <a
            href="https://www.paypal.com/paypalme/mdnssknght"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 text-white bg-gray-900 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full md:w-auto focus:outline-none"
          >
            Donate via PayPal
            <i class="fab fa-paypal"></i>
          </a>
          <a
            href="https://buymeacoffee.com/crydafan"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center gap-2 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2.5 text-center w-full md:w-auto focus:outline-none"
          >
            Buy Me a Coffee
            <i class="fa fa-coffee"></i>
          </a>
        </div>
      </div>
    </section>
  </main>
</MainLayout>

<script>
  document.addEventListener("click", (e) => {
    const target = e.target;
    if (!(target instanceof Element)) return;

    const link = target.closest("a");
    if (!link || !link.hash) return;

    const isSamePage =
      link.origin === window.location.origin &&
      link.pathname === window.location.pathname;
    if (!isSamePage) return;

    e.preventDefault();

    const targetElement = document.querySelector(link.hash);
    targetElement?.scrollIntoView({ behavior: "smooth" });
  });
</script>
